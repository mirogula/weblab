}


.header-content .logo-container {
	position: absolute;
	top: 2px;
	left: 10px;
}

.header-content .language-selection-container {
	position: absolute;
	top: 10px;
	right: 10px;
}

.header-content .language-selection-container .flag {
	margin: 0 5px;
	width: 28px;
}

.header-content .main-menubar-container {
	position: absolute;
	bottom: 2px;
	left: 10px;
}

.header-content .account-controls-container {
	position: absolute;
	bottom: 10px;
	right: 10px;
}

.header-content .account-controls-container a {
	margin: 0 10px;
	font-size: 95%;
}


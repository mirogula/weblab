.header-menubar .ui-menuitem-link {
	padding-left: 8px !important;
	padding-right: 8px !important;
	font-weight: bold !important;
	font-size: 100% !important;
}

.header-menubar .ui-menu-child .ui-menuitem-text {
	font-weight: normal !important;
}


.language-selection-container .ui-widget-content {
	background: none;
	border: none;
}

.language-selection-container .ui-datalist-data {
	padding: 0px;
	margin: 0px;
}

.language-selection-container ul {
	list-style: none;
}

.language-selection-container ul li {
	display: inline;
	margin: 0 5px;
}

/* ------------------------- custom styles ----------------------------- */


a {
	text-decoration: none;
}

a:hover {
	text-decoration: underline;
}


.header-content {
	height: 98px !important;			/* height of the header minus 2px for border  */
	position: relative;
}


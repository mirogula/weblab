
/* ------------------------------- layout ---------------------------------- */
html,body {
	margin: 0px;
	padding: 0px;
	height: 100%;
	min-width: 800px;				/* minimum width of the page */
	font-size: 1em;
	font-family: Arial, sans-serif !important;
	background-color: #eee;
}

#wrapper {
	min-height: 100%;
	height: auto !important;
	height: 100%;
	margin-top: 0px;
	margin-left: auto;
	margin-right: auto;
	margin-bottom: -30px;			/* this must be negative height of the footer  */
}

#header {
	height: 100px;
}

#content-container {
	min-height: 50px;				/* minimum height of the page, without header and footer */
	margin-top: 20px;
}

#content {
	width: 70%;
	margin: 0 auto;
}

#footer,#push {
	height: 30px;
}




/* ---------------- jquery ui components tweaks --------------------- */
.ui-widget {
	font-size: 90%;
/* 	font-size: 1em; */
}

.ui-widget-header {
	text-shadow: none !important;
}

